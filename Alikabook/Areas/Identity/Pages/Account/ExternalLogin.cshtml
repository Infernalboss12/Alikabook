@page
@model ExternalLoginModel

<div class="login-background">
    <div class="login">
        <div class="login-container register-container">
            <h1 class="login-title register-title" style="margin-top: 3em">Register</h1>
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="form">
                    <div class="form-group">
                        <label asp-for="Input.FirstName"><i class="fa-solid fa-user"></i></label>
                        <input type="text" asp-for="Input.FirstName" id="fname" placeholder="Enter your first name" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.LastName"><i class="fa-solid fa-user-tie"></i></label>
                        <input type="text" asp-for="Input.LastName" id="lname" placeholder="Enter your last name" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input.Email"><i class="fa-solid fa-envelope"></i></label>
                        <input type="email" asp-for="Input.Email" placeholder="Enter your email" readonly/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Input"><i class="fa-solid fa-phone"></i></label>
                        <input type="phone" asp-for="Input.PhoneNumber" id="phone" placeholder="Enter your phone" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="remember-me">
                        <input type="checkbox" id="agreeTerms" />
                        <label for="agreeTerms">I agree to <a href="">Terms & Conditions</a></label>
                        @* <span asp-validation-for="Input.AgreeToTerms" class="text-danger"></span> *@
                    </div>

                    <button class="login-button" type="submit">Register</button>

                    <div class="have-account">
                        <p>Already have an account?</p>
                        <a asp-area="Identity" asp-page="/Account/Login">Login now</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="login-design register-design">
            <h1>You've successfully authenticated with <span>@Model.ProviderDisplayName</span>.</h1>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
