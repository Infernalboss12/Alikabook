@page
@model ChangePasswordModel

<div class="login-background">
    <div class="login change-password">
        <div class="login-container change-password-container">
            <h1 class="login-title">Change Password</h1>
            <form method="post">
                <div class="form">
                    <div class="form-group form-current">
                        <label asp-for="Input.OldPassword">
                            <i class="fa-solid fa-envelope"></i>
                        </label>
                        <input type="password"
                               asp-for="Input.OldPassword"
                               id="currentPassword"
                               placeholder="Enter your current password" />
                        <i class="fa-regular fa-eye" id="toggleCurrentPassword"></i>
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group form-password">
                        <label asp-for="Input.NewPassword"><i class="fa-solid fa-lock"></i></label>
                        <input type="password"
                               asp-for="Input.NewPassword"
                               id="password"
                               placeholder="Enter your new password" />
                        <i class="fa-regular fa-eye" id="togglePassword"></i>
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group form-password">
                        <label asp-for="Input.ConfirmPassword"><i class="fa-solid fa-lock"></i></label>
                        <input type="password"
                               asp-for="Input.ConfirmPassword"
                               id="confirmPassword"
                               placeholder="Confirm your new password" />
                        <i class="fa-regular fa-eye" id="toggleConfirmPassword"></i>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button class="login-button" type="submit">
                        Update password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



