<div class="login-background">
    <div class="login">
        <div class="login-container">
            <h1 class="login-title">Login</h1>
            <form action="" method="post">
                <div class="form">
                    <div class="form-group">
                        <label asp-for="Input.Email"><i class="fa-solid fa-envelope"></i></label>
                        <input type="email" asp-for="Input.Email" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-password">
                        <label asp-for="Input.Password"><i class="fa-solid fa-lock"></i></label>
                        <input type="password" asp-for="Input.Password" id="password" placeholder="Enter your password" />
                        <i class="fa-regular fa-eye" id="togglePassword"></i>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="remember-me">
                        <input type="checkbox" asp-for="Input.RememberMe"/>
                        <label asp-for="Input.RememberMe"></label>
                    </div>
                    <a class="forgot" asp-page="./ForgotPassword">Forgot Password?</a>
                    <button class="login-button" type="submit">Login</button>

                    <div class="have-account">
                        <p>Don't have an account?</p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register now</a>
                    </div>
                    <p class="login-divider">Or</p>
                </div>
            </form>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                <div class="login-icons">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" >
                            <img src="~/images/background-images/google.png" alt="Login with Google" height="36" width="36" /> 
                        </button>
                    }
                </div>
            </form>
        </div>
        <div class="login-design">
            <h1>Welcome to <span>Alikabook</span> Bookstore</h1>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
