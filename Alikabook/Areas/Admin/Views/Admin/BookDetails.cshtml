@model BookInfo

<main class="container book-details-container">

    <section class="book-details">
        <div class="book-details__container">
            <img src="~/images/books/@Model.Image" alt="@Model.Title" />
        </div>
        <div class="book-details__info">
            <form asp-action="DeleteBook" method="post">
                <input type="hidden" name="id" value="@Model.BookId" />

                <h2 class="book-details__info-title">
                    @Model.Title
                </h2>
                <p class="book-details__info-author">
                    By @Model.Author
                </p>
                <div class="book-details__info-star-stocks">
                    @if(Model.RatingCount != 0)
                    {
                        <div class="book-details__info-rating">
                            <p class="book-rating">Ratings: @(Model.Rating)</p>
                            <p class="rating-count">(@Model.RatingCount people)</p>
                        </div>
                    }
                    <div class="stocks">
                        <p>Stocks: &nbsp;</p>
                        <p>@Model.Stock</p>
                    </div>
                </div>
                <h2 class="book-details__info-price">&#8369; @Model.Price</h2>
                <a asp-controller="Admin" asp-action="EditBooks" asp-route-id="@Model.BookId" class="book-details__info-btn">Update Book</a>
                <button type="submit" class="book-details__info-btn delete" onclick="return confirm('Are you sure you want to delete this book?');">Delete Book</button>
            </form>
        </div>
    </section>  

    <section class="book-description">
        <h1 class="book-description__h1">Description</h1>
        <hr class="book-description__hr" />
        <p class="book-description__p">
            @Model.Description
        </p>
    </section>

    <section class="book-description">
        <h1 class="book-description__h1">Other Book Details</h1>
        <hr class="book-description__hr" />
        <p class="book-description__p">
            <table>
                <tbody>
                    <tr>
                        <td>ISBN</td>
                        <td>9781444727364</td>
                    </tr>
                    <tr>
                        <td>Author</td>
                        <td>Sun Tzu</td>
                    </tr>
                    <tr>
                        <td>Publisher</td>
                        <td>Hodder & Stoughton</td>
                    </tr>
                    <tr>
                        <td>Publication Year</td>
                        <td>1981</td>
                    </tr>
                    <tr>
                        <td>Length</td>
                        <td>12.9</td>
                    </tr>
                    <tr>
                        <td>Width</td>
                        <td>0.7</td>
                    </tr>
                    <tr>
                        <td>Height</td>
                        <td>19.7</td>
                    </tr>
                    <tr>
                        <td>Pages</td>
                        <td>102</td>
                    </tr>
                </tbody>
            </table>
        </p>
    </section>
</main>