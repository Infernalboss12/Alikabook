                    <img src="~/images/icons/order-icon.png" alt="" />
                </div>
            </div>
            <div class="data-links">
                <p>Go to Pending Orders</p>
                <i class="fa-solid fa-arrow-right"></i>
            </div>
        </a>
        <a class="data-box customer" asp-action="CustomerList">
            <div class="data-grid">
                <div class="data">
                    <p>24</p>
                    <h4>No. of Customer</h4>
                </div>
                <div class="data-img">
                    <img src="~/images/icons/order-icon.png" alt="" />
