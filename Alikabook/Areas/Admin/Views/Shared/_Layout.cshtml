<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AlikaBook</title>
    <script src="https://kit.fontawesome.com/180a654a03.js"
            crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Alikabook.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <button class="header__menu"><i class="fa-solid fa-bars"></i></button>
        <p class="header__title">Admin Pannel</p>
        <div class="header__logout"><a href="">Log Out</a></div>
    </header>

    <aside class="sidebar">
        <div class="sidebar__logo">
            <p>Alikabook</p>
            <p>Bookstore</p>
        </div>

        <button class="sidebar__exit"><i class="fa-solid fa-xmark"></i></button>

        <p class="sidebar__dashboard">Dashboard</p>
        <div class="sidebar__menu">
            <button>
                <i class="fa-solid fa-book"></i>
                <p>Product Management</p>
                <i class="fa-solid fa-angle-right"></i>
            </button>
            <div class="sidebar__submenu">
                <button>&#8226; &nbsp; Add/Edit Books</button>
                <button>&#8226; &nbsp; View Books</button>
            </div>
            <button>
                <i class="fa-solid fa-book"></i>
                <p>Order Management</p>
                <i class="fa-solid fa-angle-right"></i>
            </button>
            <div class="sidebar__submenu">
                <button>&#8226; &nbsp; View Orders</button>
                <button>&#8226; &nbsp; Process Orders</button>
            </div>
            <button>
                <i class="fa-solid fa-book"></i>
                <p>Inventory Management</p>
                <i class="fa-solid fa-angle-right"></i>
            </button>
            <div class="sidebar__submenu">
                <button>&#8226; &nbsp; Inventory Dashboard</button>
                <button>&#8226; &nbsp; Stock Management</button>
            </div>
            <button>
                <i class="fa-solid fa-book"></i>
                <p>Customer Management</p>
                <i class="fa-solid fa-angle-right"></i>
            </button>
            <div class="sidebar__submenu">
                <button>&#8226; &nbsp; Inventory Dashboard</button>
                <button>&#8226; &nbsp; Stock Management</button>
            </div>
        </div>
    </aside>
    
    @RenderBody()



    <script src="~/js/admin.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
